<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="#CCffffff">

    <TextView
        android:id="@+id/generator_option_courseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Place Holder I"
        android:textSize="20sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@android:color/holo_blue_light"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CRN: "
                android:textColor="@android:color/holo_purple" />

            <TextView
                android:id="@+id/generator_option_crn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MATH-194 (442456)"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prof: "
                android:textColor="@android:color/holo_purple" />

            <TextView
                android:id="@+id/generator_option_faculty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chung. G"
                android:textSize="15sp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CRN: "
                android:textColor="@android:color/holo_purple" />

            <TextView
                android:id="@+id/generator_option_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hybrid (............)\nMWF 5:00PM - 10PM"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="room: "
                android:textColor="@android:color/holo_purple" />

            <TextView
                android:id="@+id/generator_option_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WLSON 416"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>